# Crypto Invoice System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# MEXC API Credentials
# Get these from https://www.mexc.com/user/openapi
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# Database Configuration
DATABASE_PATH=crypto_invoice_system/crypto_invoices.db

# Payment Polling Configuration
POLLING_INTERVAL_SECONDS=30
PAYMENT_TOLERANCE_PERCENT=0.5

# SMTP Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=billing@deltaenergy.com

# Notification Recipients
NOTIFICATION_EMAIL_CC=aldo@deltaenergy.com,tiago@deltaenergy.com

# Webhook/Slack Integration (Optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Cryptocurrency Price API (Optional - for live prices)
COINGECKO_API_KEY=your_coingecko_api_key

# Invoice Generation
INVOICE_OUTPUT_DIR=crypto_invoice_system/generated_invoices
INVOICE_NUMBER_PREFIX=DPY

# Confirmation Requirements
BTC_CONFIRMATIONS_REQUIRED=3
USDT_CONFIRMATIONS_REQUIRED=20
TAO_CONFIRMATIONS_REQUIRED=12

# Overdue Invoice Settings
INVOICE_OVERDUE_DAYS=7

# CFO System Integration
CFO_SYSTEM_DB_PATH=web_ui/delta_transactions.db
ENABLE_CFO_SYNC=True
